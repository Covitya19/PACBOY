from pygame import *
from random import randint
from time import time as timer

from tkinter import *


class GameSprite(sprite.Sprite):
    def __init__(self, x, y, speed, texture):
        super().__init__()
        self.speed = speed
        self.texture = transform.scale(image.load(texture))
        self.rect = self.image.get_rect()
        self.rect.x = x
        self.rect.y = y

    def reset(self):
        window.blit(self.image, (self.rect.x, self.rect.y))

class Player(GameSprite):
    def update(self):
        keys_pressed = key.get_pressed()
        if keys_pressed[K_a] and self.rect.x < 1375:
            self.rect.x -= self.speed
        if keys_pressed[K_d] and self.rect.x > 25:
            self.rect.x += self.speed
        if keys_pressed[K_s] and self.rect.y < 975:
            self.rect.y -= self.speed
        if keys_pressed[K_w] and self.rect.y < 25:
            self.rect.y += self.speed

class Enemy(GameSprite):
    def update(self):
        pass

class Cherry(GameSprite):
    pass



font.init()
font = font.SysFont('Arial', 30)

window.size = (1400, 1000)
FPS = 60
clock = time.Clock()

window = display.setmode(window_size)
display.set_caption('pacBOY')

